<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>

  <property>
    <name>mapreduce.map.output.compress</name>  
    <value>true</value>
  </property>

  <property>
    <name>mapred.map.output.compress.codec</name>  
    <value>org.apache.hadoop.io.compress.SnappyCodec</value>
  </property>

  <property>
    <name>yarn.app.mapreduce.am.log.level</name>
    <value>DEBUG</value>
  </property>

  <property>
    <name>mapreduce.jobtracker.hosts.exclude.filename</name>
    <value>/etc/hadoop/conf/mapred.exclude</value>
  </property>

  <property>
    <name>mapreduce.jobhistory.address</name>
    <value><%="#{float_host(@hs_hosts.sort.first[:hostname])}:10020" if not @hs_hosts.empty?%></value>
  </property>

  <property>
    <name>mapreduce.jobhistory.webapp.address</name>
    <value><%="#{float_host(@hs_hosts.sort.first[:hostname])}:19888" if not @hs_hosts.empty?%></value>
  </property>

  <property>
    <name>yarn.app.mapreduce.am.staging-dir</name>
    <value>/user</value>
  </property>
  <% if node[:bcpc][:hadoop][:enable_kerberos] == true then %>
  <property>
    <name>mapreduce.jobhistory.keytab</name>
    <value><%= node[:bcpc][:hadoop][:kerberos][:keytab][:dir] %>/<%= node[:bcpc][:hadoop][:kerberos][:data][:historyserver][:keytab] %></value>
  </property>
  <% if node.run_list.expand(node.chef_environment).recipes.include?("bcpc-hadoop::historyserver") %>
  <property>
    <name>mapreduce.jobhistory.principal</name>
    <value><%= node[:bcpc][:hadoop][:kerberos][:data][:historyserver][:principal] %>/<%= node[:bcpc][:hadoop][:kerberos][:data][:historyserver][:princhost] == "_HOST" ? float_host(node[:fqdn]) : node[:bcpc][:hadoop][:kerberos][:data][:historyserver][:princhost] %>@<%= node[:bcpc][:hadoop][:realm] %></value>
  </property>
  <% else %>
  <property>
    <name>mapreduce.jobhistory.principal</name>
    <value><%= node[:bcpc][:hadoop][:kerberos][:data][:historyserver][:principal] %>/<%=node[:bcpc][:hadoop][:kerberos][:data][:historyserver][:princhost] == "_HOST" ? "_HOST" : node[:bcpc][:hadoop][:kerberos][:data][:historyserver][:princhost]%>@<%= node[:bcpc][:hadoop][:realm] %></value>
  </property>
  <% end %>
  <% end %>

</configuration>
